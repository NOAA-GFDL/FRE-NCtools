if test "$VERBOSE" = yes
then
    set -x
    command -v split_ncvars.pl --version
fi

. ${srcdir=.}/init.sh; path_prepend_ ../src

# Use the test netCDF files from plevel
${builddir=.}/create_plevel_test_ncfile || framework_failure_ "failed to create plevel test files"

# Run split_ncvars.pl
split_ncvars.pl -o out test_input.nc || fail_ split_ncvars.pl test_input.nc failed
# Check that ps.nc, temp.nc and dummy.nc were created in the out directory
test -f out/ps.nc || fail_ ps.nc not created
test -f out/temp.nc || fail_ temp.nc not created
test -f out/dummy.nc || fail_ dummy.nc not created
