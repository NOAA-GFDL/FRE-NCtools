if test "$VERBOSE" = yes
then
    set -x
    command -v split_ncvars.pl --version
fi

. ${srcdir=.}/init.sh; path_prepend_ ../src

# Use the test netCDF files from plevel
${builddir=.}/create_plevel_test_ncfile || framework_failure_ "failed to create test files"

# Run split_ncvars.pl
output=$(split_ncvars.pl -p -VVV test_input.nc) || fail_ split_ncvars.pl test_input.nc failed
# Check for expected output
grep -q 'var=temp; timename=time; vlist=temp,ps,pk,bk' <<< "$output" || fail_ output does not contain expected output
